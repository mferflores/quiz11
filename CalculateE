#include <iostream>
using namespace std;
float calculateE(float x){
float h=0,i=1;
float k,m,p;
int n=1, q=1;
do {
k=n+(1/(h*i));
m=q+(1/((h*i)+1));
if(m>k){
p=m-k;}
else if(k>=m){
  p=k-m;
}
n=k;
q=m;
h=i;
i=i+1;
}
while(p>=x);
return m;
}

}
int main(){
float g;
cout<<"Type the accuracy number"<<endl;
cin>>g;
float r=calculateE(g);
cout<<"The value of e is "<<r<<endl;
return 0;
}
